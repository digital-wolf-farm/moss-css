{
    "name": "moss-css",
    "version": "0.0.1",
    "description": "CSS library",
    "main": "index.js",
    "scripts": {
        "dev": "sass ./src/style.scss ./dist/moss.css --style=expanded",
        "dev:watch": "sass ./src/style.scss ./dist/moss.css --watch --style=expanded",
        "build": "sass ./src/style.scss ./dist/moss.min.css --style=compressed --no-source-map",
        "lint": "stylelint ./src/**/*.scss"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/digital-wolf-farm/moss-css.git"
    },
    "keywords": [
        "Moss",
        "CSS",
        "SCSS",
        "library"
    ],
    "author": "digital-wolf-farm",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/digital-wolf-farm/moss-css/issues"
    },
    "homepage": "https://github.com/digital-wolf-farm/moss-css#readme",
    "devDependencies": {
        "sass": "^1.44.0",
        "stylelint": "^14.1.0",
        "stylelint-config-standard-scss": "^3.0.0"
    }
}
